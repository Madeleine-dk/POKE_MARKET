<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-white text-black text-center">
          <h3 class="card-title mb-0">Create New Item</h3>
            <%= simple_form_for @card do |f| %>
              <div class="form-group mb-3">
                <%= f.input :title, label: "Title", input_html: { class: "form-control" } %>
              </div>

              <div class="form-group mb-3">
                <%= f.input :ppd, label: "Price", input_html: { class: "form-control" } %>
              </div>

              <div class="form-group mb-3">
                <%= f.input :description, label: "Description", input_html: { class: "form-control" } %>
              </div>

              <div class="form-group mb-3">
                <%= f.input :photo, as: :file, label: "Upload Image", input_html: { class: "form-control" } %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Upload Card", class: "btn btn-success" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10 text-center">
    <%= image_tag "charizard-dance.gif", width: 300, height: 200 %>
    </div>
  </div>
</div>
